          li  
            a(href='#')   
              span.glyphicon.magnifier.glyphicon-search(aria-hidden='true')          
  .container
    .row      
      .col-md-11.col-md-offset-1.profile-header
        .row
          .col-md-11            
            div.photo
              img(src="pictures/portImg.jpg", alt="Cinque Terre").img-circle
            .profile-info
              .header-info
                h2 Леонардо Вільгельм Ді Капріо          
              .main-info
                h5 Дата народження : 11 листопада 1974
                h5 Місто : Лос-Анджелес
                h5 Освіта : Універ            
          .col-md-1.edit           
            div
              a(href="")
                img(src="pictures/Edit_small.png", alt="")              
  .container
    .row      
      .col-md-11.col-md-offset-1.ratings
        .row
          .col-md-11
            .row
              div.header-offers
                h3 Рейтинг
          //- .col-md-1.edit
          //-   .row          
          //-     div
          //-       a(href="")
          //-         img(src="pictures/Plus_small.png", alt="") 
  .container
    .row      
      .col-md-11.col-md-offset-1.portfolios
        .row
          .col-md-11
            .row
              div.header-offers
                h3 Портфоліо робіт
          .col-md-1.edit(ng-controller='createPorf')
            .row
              div
                a(href="")
                  img(src="pictures/Edit_small.png", alt="")
              div
                a(href="",ng-click='open("lg")')
                  img(src="pictures/Plus_small.png", alt="") 
        .row
          .col-md-12
            div.photos(ng-controller='listOfporf')       
              slick(infinite='true',speed='300',slides-to-scroll='1',slides-to-show='7')
                div(ng-repeat='image in images track by $index')                            
                    img(ng-src='{{image}}')
                    span Bla-bla-blasafkjlasdlfkj          
  .container#myOffers
    .row      
      .col-md-11.col-md-offset-1.offers
        .row
          .col-md-11
            .row
              div.header-offers
                h3 Мої пропозиції
          .col-md-1.edit
            .row
              div
                a(href="")
                  img(src="pictures/Edit_small.png", alt="")
              div
                a(href="")
                  img(src="pictures/Plus_small.png", alt="") 
        .row
          .col-md-12          
            div.offersList(ng-controller='offersList')
              div.media(ng-repeat='offer in offers  | startFrom:(currentPage-1)*pageSize | limitTo : pageSize')
                div.media-left
                  a(href='#')
                    img.media-object(ng-src='{{offer}}')                   
                div.media-body
                  h4.media-heading offer
                  span lalalalalalalalalalallalalalalaal
                hr
              div.paginat
                ul.myPagination(uib-pagination, rotate='true',force-ellipses='true',previous-text="<", next-text=">",total-items='offers.length',ng-model='currentPage',items-per-page='pageSize')    
              
              
        
